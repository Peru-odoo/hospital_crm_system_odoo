<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="action_hospital_doctor_schedule_tree_view" model="ir.ui.view">
            <field name="name">hospital.doctor_schedule.tree</field>
            <field name="model">hospital.doctor_schedule</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="doctor"/>
                    <field name="patient"/>
                    <field name="appointment_datetime"/>
                </tree>
            </field>
         </record>
        <record id="action_hospital_doctor_schedule_form_view" model="ir.ui.view">
            <field name="name">hospital.doctor_schedule.form</field>
            <field name="model">hospital.doctor_schedule</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="doctor"/>
                            <field name="patient"/>
                            <field name="appointment_datetime"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_hospital_doctor_schedule" model="ir.actions.act_window">
            <field name="name">Doctor schedule</field>
            <field name="res_model">hospital.doctor_schedule</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="action_hospital_doctor_schedule_tree_view"/>
            <field name="help" type="html">
                <p class="o_view_noconten_smiling_face">
                        Create a new doctor appointment
                </p>
            </field>
        </record>
    </data>
</odoo>
