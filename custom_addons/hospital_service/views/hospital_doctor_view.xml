<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="action_hospital_doctor_tree_view" model="ir.ui.view">
            <field name="name">hospital.doctor.tree</field>
            <field name="model">hospital.doctor</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="phone"/>
                    <field name="email"/>
                    <field name="gender"/>
                    <field name="specialty"/>
                    <field name="is_intern"/>
                </tree>
            </field>
         </record>
        <record id="action_hospital_doctor_form_view" model="ir.ui.view">
            <field name="name">hospital.doctor.form</field>
            <field name="model">hospital.doctor</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="photo"/>
                            <field name="gender"/>
                            <field name="specialty"/>
                            <field name="is_intern"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_hospital_doctor" model="ir.actions.act_window">
            <field name="name">Doctor</field>
            <field name="res_model">hospital.doctor</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="action_hospital_doctor_tree_view"/>
            <field name="help" type="html">
                <p class="o_view_noconten_smiling_face">
                        Create a new doctor
                </p>
            </field>
        </record>
    </data>
</odoo>
